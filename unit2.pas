function GetK(L: TMyLine): extended;
begin
  if L.first.X = L.second.X then
    Result := 572957.795104344
  else
    Result := (L.first.Y - L.second.Y)/(L.first.X - L.second.X);
end;

var
  FalseDn: boolean = false;

procedure TMeaRuler_Form2.FormMouseDown(Sender: TObject; Button: TMouseButton;
  Shift: TShiftState; X, Y: Integer);
  procedure RedrawLine(N: integer);
  begin
    OldLine[N].Draw;
    NewLine[N].first := Point(X,Y);
    NewLine[N].second := Point(X,Y);
    NewLine[N].Draw;
  end;
  type
    TFloatPoint = record
      X, Y: extended;
    end;
  function FloatPoint(X, Y: extended): TFloatPoint;
  begin
    Result.X := X;
    Result.Y := Y;
  end;

  function Euclidean(pt1, pt2: TFloatPoint): extended;
  begin
    Result := sqrt(sqr(pt1.X - pt2.X) + sqr(pt1.Y - pt2.Y));
  end;

  function InAngle(MyPoint, AlphaPt, BetaPt, GammaPt: TFloatPoint; var angle: double): boolean;
    function CalcAngle(p1, p2, p3: TFloatPoint): extended;
    var
      A, B, C: extended;
    begin
      A := Euclidean(p1, p2);
      B := Euclidean(p1, p3);
      C := Euclidean(p2, p3);
      if C = 0 then
        Result := 0
      else
        begin
          Result := (A * A + B * B - C * C) / (2 * A * B);
          Result := (arctan(sqrt(1 - sqr(Result)) / Result)) * 180 / pi;
          if Result < 0 then
            Result := 180 + Result;
        end;
    end;
  var
    Angle1, Angle2: extended;
  begin
    Angle1 := CalcAngle(AlphaPt, MyPoint, BetaPt);
    Angle2 := CalcAngle(AlphaPt, MyPoint, GammaPt);
    Angle := CalcAngle(AlphaPt, BetaPt, GammaPt);
    Result := abs(Angle - Angle1 - Angle2) < 0.01;
    if MeaRuler_Form1.AngleRGroup.ItemIndex = 1 then
      angle := 360 - angle;
  end;

var
  sx, sy, k, b, kp, bp: extended;
  AR: double;
  Pt3, CrossingPoint, PA, PB, PC, PD: TFloatPoint;
  i: integer;

begin
  falseDn := false;
  if ssDouble in shift then
    begin
      falseDn := true;
      exit;
    end;
  if BreakLine then
    exit;
  AngleMode := MeaRuler_Form1.AngleModeCheckBox.Checked;
  MeaRuler_Form1.AngleModeCheckBox.Enabled := false;
  if [ssLeft] = Shift then
    begin
      MouseWatch := true;
      if not AngleMode then
        RedrawLine(0)
      else
        begin
          if AngleCounter < 2 then
            RedrawLine(AngleCounter)
          else
            begin

              k := GetK(NewLine[0]);
              b := NewLine[0].first.Y - k * NewLine[0].first.X;
              kp := GetK(NewLine[1]);
              bp := NewLine[1].first.Y - kp * NewLine[1].first.X;
              if k - kp = 0 then
                AngleResult := '0,00'
              else
                begin
                  CrossingPoint.X := (bp - b) / (k - kp);
                  CrossingPoint.Y := k * CrossingPoint.X + b;
                  sx := width;
                  sy := height;
                  PA := FloatPoint(0, bp);
                  PB := FloatPoint(sx, k * sx + b);
                  PC := FloatPoint(sx, kp * sx + bp);
                  PD := FloatPoint(0, b);
                  Pt3 := FloatPoint(X, Y);

                  if not InAngle(Pt3, CrossingPoint, PA, PB, AR) then
                    if not InAngle(Pt3, CrossingPoint, PB, PC, AR) then
                      if not InAngle(Pt3, CrossingPoint, PC, PD, AR) then
                        if not InAngle(Pt3, CrossingPoint, PD, PA, AR) then
                          AR := -1;
                  if AR = -1 then
                    begin
                      AngleResult := '?.??';
                      FalseDn := true;
                      exit;
                    end
                  else
                    str(AR:0:2, AngleResult);
                  for i := 1 to length(AngleResult) do
                    if AngleResult[i] = '.' then
                      begin
                        AngleResult[i] := ',';
                        break;
                      end;
                end;
              NewLine[0].Draw;
              NewLine[1].Draw;

              NewLine[0].First := Point(0, 0);
              NewLine[0].Second := Point(0, 0);
              NewLine[1].First := Point(0, 0);
              NewLine[1].Second := Point(0, 0);
              OldLine[0].First := Point(0, 0);
              OldLine[0].Second := Point(0, 0);
              OldLine[1].First := Point(0, 0);
              OldLine[1].Second := Point(0, 0);
            end;
        end;
    end
  else if [ssRight] = Shift then
    MeaRuler_Form1.Button2Click(nil)
  else if ([ssMiddle] = Shift) and AngleMode then
    begin
      breakLine := true;
      CancelLine;
    end;
end;

