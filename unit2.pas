procedure TMeaRuler_Form2.FormMouseUp(Sender: TObject; Button: TMouseButton;
  Shift: TShiftState; X, Y: Integer);
var
  s: string;
  procedure Final;
  var
    i: integer;
  begin
    for i := 1 to length(s) do
      if s[i] = '.' then
        begin
          s[i] := ',';
          break;
        end;
    MeaRuler_Form1.Label2.Caption := s;
    MeaRuler_Form1.Label2.ShowHint := s <> '';
    MeaRuler_form1.DefaultMemoButton.Enabled := true;
    for i := 0 to MeaRuler_form1.ControlCount - 1 do
      if MeaRuler_form1.Controls[i] is TButton then
        if TButton(MeaRuler_form1.Controls[i]).Tag > 0 then
          TButton(MeaRuler_form1.Controls[i]).Enabled := true;
    MeaRuler_form1.AngleModeCheckBox.Enabled := true;
  end;
begin
  if FalseDn then
    exit;
  if BreakLine then
    begin
      BreakLine := false;
      exit;
    end;
  FormMouseMove(Sender, [ssLeft], X, Y);
  MouseWatch := false;
  if not AngleMode then
    begin
      str(sqrt(sqr(NewLine[0].first.X - NewLine[0].second.X) + sqr(NewLine[0].first.Y - NewLine[0].second.Y)):0:1, s);
      OldLine[0].Assign(NewLine[0]);
      OldLine[1].Assign(NewLine[1]);
      MeaRuler_Form1.DataIsDegrees := false;
      final;
    end
  else
    begin
      if [ssMiddle] = shift then
        exit;
      if AngleCounter = 2 then
        begin
          s := AngleResult;
          MeaRuler_Form1.DataIsDegrees := true;
          final;
          AngleCounter := -1;
        end;
      inc(AngleCounter);
      MeaRuler_Form1.CancelLineButton.Enabled := AngleCounter > 0;
    end;
end;

